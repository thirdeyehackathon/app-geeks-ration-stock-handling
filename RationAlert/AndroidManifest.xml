<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rationalert"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission 
        android:name="android.permission.SEND_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.rationalert.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.rationalert.SelectCardType"
            android:label="@string/title_activity_select_card_type" >
        </activity>
        <activity
            android:name="com.example.rationalert.Greencard"
            android:label="@string/title_activity_greencard" >
        </activity>
        <activity
            android:name="com.example.rationalert.YellowActivity"
            android:label="@string/title_activity_yellow" >
        </activity>
        <activity
            android:name="com.example.rationalert.BlueActivity"
            android:label="@string/title_activity_blue" >
        </activity>
        <activity
            android:name="com.example.rationalert.WhiteActivity"
            android:label="@string/title_activity_white" >
        </activity>
        <activity
            android:name="com.example.rationalert.SaffronActivity"
            android:label="@string/title_activity_saffron" >
        </activity>
    </application>

</manifest>
